##########################################
# BACKBLAZE B2 AUTH
##########################################
B2_APPLICATION_KEY_ID=
B2_APPLICATION_KEY=

##########################################
# BACKBLAZE BUCKETS (IDS ONLY)
##########################################
B2_LANDING_BUCKET_ID=
B2_PROCESSED_STANDARD_BUCKET_ID=
B2_PROCESSED_ARCHIVE_BUCKET_ID=
B2_FILES_BUCKET_ID=

##########################################
# AWS S3 / GLACIER (optional)
##########################################
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_ARCHIVE_BUCKET=

##########################################
# SUPABASE (server-side)
##########################################
NEXT_PUBLIC_SUPABASE_URL=
# Preferred: service role for server RPCs. Provide one of SERVICE_ROLE or SERVICE_KEY
SUPABASE_SERVICE_ROLE=
SUPABASE_SERVICE_KEY=

##########################################
# REDIS (URL preferred; fallback to host/port)
##########################################
# Use a TLS URL for managed Redis (rediss://user:pass@host:port)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=
REDIS_TLS=

##########################################
# OPENAI
##########################################
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

##########################################
# HEALTH + WORKER FLAGS
##########################################
HEALTH_PORT=8081
DRY_RUN=false
MINIMAL_MODE=false

##########################################
# Jobgroup Polling (optional overrides)
##########################################
# Default 5 minutes for both when active/idle
JOBGROUP_POLL_ACTIVE_INTERVAL_MS=300000
JOBGROUP_POLL_IDLE_INTERVAL_MS=300000

##########################################
# Audit & Alerts (optional)
##########################################
# Directory for jobgroup audit logs (writable path)
JOBGROUP_AUDIT_LOG_DIR=/var/log/relicxs/jobgroups
# Webhook to receive DLQ events as JSON POSTs
DLQ_WEBHOOK_URL=

##########################################
# Notes
##########################################
# - Do NOT commit real secrets. Use the .env file on the droplet for runtime secrets.
# - Provide either SUPABASE_SERVICE_ROLE (preferred) or SUPABASE_SERVICE_KEY for server RPCs.
# - If using REDIS_URL, leave REDIS_HOST/PORT empty.
